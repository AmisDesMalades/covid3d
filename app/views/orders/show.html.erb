<div class="page-header">
  <%= link_to orders_path, class: 'btn btn-default' do %>
  All Orders
  <% end %>
  <%= link_to edit_order_path(@order), class: 'btn btn-primary' do %>
  Edit
  <% end %>
  <h1>Show order</h1>
</div>

<dl class="dl-horizontal">
  <dt>User:</dt>
  <dd><%= @order.user.name %></dd>

  <dt>Hospital:</dt>
  <dd><%= @order.hospital %></dd>

  <dt>Reference:</dt>
  <dd><%= @order.reference %></dd>

  <dt>Comment:</dt>
  <dd><%= @order.comment %></dd>

  <dt>Status:</dt>
  <dd><%= @order.status %></dd>
</dl>


<% @order.images.each_with_index do |image, index| %>
<% if index == 0 %>
<%= image_tag(image, class: "d-block w-100") %>
<% end %>
<% end %>