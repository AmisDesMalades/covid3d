<div class="card border-light">
  <h4 class="card-header text-center">Description</h4>
  <div class="card-body">
    <%== project.description_html %>
    <ul class="list-group list-group-flush">
      <li class="list-group-item">
        <b>Validation: </b>
        <%= project[:validation] %>
      </li>
      <li class="list-group-item">
        <b>Catégorie: </b>
        <%= project[:category] %>
      </li>
      <li class="list-group-item">
        <b>License: </b>
        <%= project.license %>
      </li>
    </ul>
    <p class="card-text">
      <small class="text-muted">
        Mise à jour le <%= project.updated_at %>
      </small>
    </p>
  </div>
</div>

