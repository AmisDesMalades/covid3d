<section class="jumbotron text-center">
  <div class="container">
    <h1><%= @project.name %>
      <% if policy(@project).update? %>
        <%= link_to edit_project_path(@project), class: 'btn btn-primary' do %>
          <%= fa_icon('edit') %>
        <% end %>
      <% end %>
    </h1>
    <p class="lead text-muted">
      <i>
        <%= @project.category %> -
        <%= @project.validation %>
      </i>
      <br/>
      <%= @project.short_description %>
    </p>
  </div>
</section>

